extends layout

block config
    - var title = "Home";

block content
    // Slide1
    section.slide1
      .wrap-slick1
        .slick1
          .item-slick1.item1-slick1(style='background-image: url(../images/slide-banner-01.jpg);')
            .wrap-content-slide1.sizefull.flex-col-c-m.p-l-15.p-r-15.p-t-150.p-b-170
              span.caption1-slide1.m-text1.t-center.animated.visible-false.m-b-15(data-appear='fadeInDown')
                | Collection 2018
              h2.caption2-slide1.xl-text1.t-center.animated.visible-false.m-b-37(data-appear='fadeInUp')
                | New arrivals
              .wrap-btn-slide1.w-size1.animated.visible-false(data-appear='zoomIn')
                // Button
                a.flex-c-m.size2.bo-rad-23.s-text2.bgwhite.hov1.trans-0-4(href='product.html')
                  | Shop Now
    // Banner
    section.banner.bgwhite.p-t-40.p-b-40
      .container
        .row#newProducts
    // New Product
    script(src="../dist/widget.bundle.js")
    #homePageRecommendation

    // Shipping
    section.shipping.bgwhite.p-t-62.p-b-46
      .flex-w.p-l-15.p-r-15
        .flex-col-c.w-size5.p-l-15.p-r-15.p-t-16.p-b-15.respon1
          h4.m-text12.t-center
            | Free Delivery Worldwide
          a.s-text11.t-center(href='#')
            | Click here for more info
        .flex-col-c.w-size5.p-l-15.p-r-15.p-t-16.p-b-15.bo2.respon2
          h4.m-text12.t-center
            | 30 Days Return
          span.s-text11.t-center
            | Simply return it within 30 days for an exchange.
        .flex-col-c.w-size5.p-l-15.p-r-15.p-t-16.p-b-15.respon1
          h4.m-text12.t-center
            | Store Opening
          span.s-text11.t-center
            | Shop open from Monday to Sunday

block scripts
  script(src="../dist/home.bundle.js")
