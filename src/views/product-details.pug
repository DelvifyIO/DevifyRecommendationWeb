extends layout

block config
    - var title = "Product Details";

block content
    // breadcrumb
    .bread-crumb.bgwhite.flex-w.p-l-52.p-r-15.p-t-30.p-l-15-sm#breadcrumb
    // Product Detail
    .container.bgwhite.p-t-35.p-b-80
        .flex-w.flex-sb
            .w-size13.p-t-30.respon5
                .wrap-slick3.flex-sb.flex-w
                    .wrap-slick3-dots
                    .slick3#productSlide
            .w-size14.p-t-30.respon5
                h4.product-detail-name.m-text16.p-b-13#productName
                span.m-text17#productPrice
                p.s-text8.p-t-10#productDescription
                //
                .p-t-33.p-b-60
                    .flex-l-m.flex-w.p-t-10
                        .w-size16.flex-m.flex-w
                            .flex-w.bo5.of-hidden.m-r-22.m-t-10.m-b-10
                                button.btn-num-product-down.color1.flex-c-m.size7.bg8.eff2
                                    i.fs-12.fa.fa-minus(aria-hidden='true')
                                input.size8.m-text18.t-center.num-product(type='number', name='num-product', value='1')#quantity
                                button.btn-num-product-up.color1.flex-c-m.size7.bg8.eff2
                                    i.fs-12.fa.fa-plus(aria-hidden='true')
                            .btn-addcart-product-detail.size9.trans-0-4.m-t-10.m-b-10#addToCartBtn
                                // Button
                                button.flex-c-m.sizefull.bg1.bo-rad-23.hov1.s-text1.trans-0-4
                                    | Add to Cart
                .p-b-45
                    span.s-text8.m-r-35#productSKU
                    span.s-text8#productCategories
                .wrap-dropdown-content.bo7.p-t-15.p-b-14
                    h5.js-toggle-dropdown-content.flex-sb-m.cs-pointer.m-text19.color0-hov.trans-0-4
                        | Additional information
                        i.down-mark.fs-12.color1.fa.fa-minus.dis-none(aria-hidden='true')
                        i.up-mark.fs-12.color1.fa.fa-plus(aria-hidden='true')
                    .dropdown-content.dis-none.p-t-15.p-b-23
                        p.s-text8#productAddition
                .wrap-dropdown-content.bo7.p-t-15.p-b-14
                    h5.js-toggle-dropdown-content.flex-sb-m.cs-pointer.m-text19.color0-hov.trans-0-4
                        | Reviews (0)
                        i.down-mark.fs-12.color1.fa.fa-minus.dis-none(aria-hidden='true')
                        i.up-mark.fs-12.color1.fa.fa-plus(aria-hidden='true')
                    .dropdown-content.dis-none.p-t-15.p-b-23
                        p.s-text8#productReviews
    // Relate Product
    #productDetailsRecommendation
    // Featured Product
    #productDetailsFeatured

block scripts
    script(src="../dist/productDetails.bundle.js")
    script(src="../dist/widget.bundle.js")